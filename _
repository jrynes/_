var updateSetSysId = "<update_set_sys_id>"; // Replace with your update set sys_id
var gr = new GlideRecord("sys_update_set");
if (gr.get(updateSetSysId)) {
    var exportXml = new GlideExportXML();
    exportXml.setRecord(gr); // Set the update set record
    var attachmentSysId = exportXml.write("Exported Update Set " + gr.name + ".xml", "sys_update_set", gr.sys_id);
    gs.print("XML export created and attached with sys_id: " + attachmentSysId);
} else {
    gs.print("Update set not found for sys_id: " + updateSetSysId);
}
